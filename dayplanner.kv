    rows: 1
    orientation: 'lr-tb'
    size_hint_y: None
    height: 100
    #size_hint: self.x, self.y
    #size:600 , 150
    #size_hint : None, None
    Button:
        id: partA
        color: 0, 1, 0, 1
        text: '+'
        font_size:'30sp'
        size_hint: .25, None
        on_press: root.bump_activity()
    TextInput:
        id: partB
        multiline: False
        font_size:'30sp'
        size_hint: .5, None
        padding: [20,30,0,0]
    Button:
        id: partC
        color: 1, 0, 0, 1
        text: 'x'
        font_size:'30sp'
        size_hint: .25, None
        on_press: root.remove_activity()

