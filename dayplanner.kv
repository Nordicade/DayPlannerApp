            id: activity_list_layout
            height: self.minimum_height
            cols: 1
            row_default_height: 60
            size_hint: 1 , None
            Label:
                height: 20
                text: 'Activities'

    AnchorLayout:
        size_hint_y: .4
        canvas:
            Color:
                rgba:0, 128/255, 128/255, .9
            Rectangle:
                pos: self.pos
                size: self.size
        padding: 10,10,10,10
        Button:
            color: 0, 1, 0, 1
            text: 'Add Activity'
            font_size:'20sp'
            on_press: root.add_activity()

<CustomWidgets>
    cols: 3
    rows: 1
    orientation: 'lr-tb'
    size_hint_y: None
    height: 100
    #size_hint: self.x, self.y
    #size:600 , 150
    #size_hint : None, None
    Button:
        id: partA
        color: 0, 1, 0, 1
        text: '+'
        font_size:'30sp'
        size_hint: .25, None
        on_press: root.bump_activity()
    TextInput:
        id: partB
        multiline: False
        font_size:'30sp'
        size_hint: .5, None
        padding: [20,30,0,0]
    Button:
        id: partC
        color: 1, 0, 0, 1
        text: 'x'
        font_size:'30sp'
        size_hint: .25, None
        on_press: root.remove_activity()

