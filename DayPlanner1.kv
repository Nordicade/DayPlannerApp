<CustomGridLayout>:
    id: underlying_layout
    orientation: 'vertical'
    cols: 1
    row: 3

    StackLayout:
        padding: 50,50,50,50
        Button:
            color: 0, 1, 0, 1
            text: 'top'
            font_size:'20sp'
            number: 1

    ScrollView:
        GridLayout:
            height: self.minimum_height
            cols: 1
            row_default_height: 60
            size_hint_y: None
            Label:
                height: 30
                text: 'Label One'
            Button:
                color: 0, 1, 0, 1
                text: '1'
                font_size:'20sp'
                number: 1
            Button:
                color: 0, 1, 0, 1
                text: '2'
                font_size:'20sp'
                number: 2
            Button:
                color: 0, 1, 0, 1
                text: '3'
                font_size:'20sp'
                number: 3
            Button:
                color: 0, 1, 0, 1
                text: '4'
                font_size:'20sp'
                number: 4


    AnchorLayout:
        padding: 50,50,50,50
        Button:
            color: 0, 1, 0, 1
            text: 'Add Action'
            font_size:'20sp'
            number: 1

<CustomWidgets>
    Button:
        pos: 0,0
        size: 100,100
        color: 1, 0, 0, 1
        text: 'x'
        font_size:'30sp'
        number: 0
