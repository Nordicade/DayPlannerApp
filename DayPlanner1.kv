<CustomGridLayout>:
    id: underlying_layout
    orientation: 'vertical'
    cols: 1
    row: 3

    StackLayout:
        padding: 50,50,50,50
        Button:
            color: 0, 1, 0, 1
            text: 'top'
            font_size:'20sp'
            number: 1

    ScrollView:
        GridLayout:
            height: self.minimum_height
            cols: 1
            row_default_height: 60
            size_hint_y: None
            Label:
                height: 30
                text: 'Label One'
            Button:
                color: 0, 1, 0, 1
                text: '1'
                font_size:'20sp'
                number: 1

            GridLayout:
                cols: 3
                #size: root.width * .8 , root.hegiht * 0.8
                Button:
                    color: 0, 1, 0, 1
                    text: '+'
                    font_size:'20sp'
                TextInput:
                    multiline: False
                Button:
                    color: 0, 1, 0, 1
                    text: '...'
                    font_size:'20sp'

            Button:
                color: 0, 1, 0, 1
                text: '3'
                font_size:'20sp'
                number: 3
            Button:
                color: 0, 1, 0, 1
                text: '4'
                font_size:'20sp'
                number: 4
            Button:
                color: 0, 1, 0, 1
                text: '5'
                font_size:'20sp'
                number: 5


    AnchorLayout:
        padding: 50,50,50,50
        Button:
            color: 0, 1, 0, 1
            text: 'Add Action'
            font_size:'20sp'
            number: 1

<CustomWidgets>
    GridLayout:
        cols: 3
        #size: root.width * .8 , root.hegiht * 0.8
        Button:
            color: 0, 1, 0, 1
            text: '+'
            font_size:'20sp'
        TextInput:
            multiline: False
        Button:
            color: 0, 1, 0, 1
            text: '...'
            font_size:'20sp'
